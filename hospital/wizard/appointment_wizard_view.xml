<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_appointment_wizard_form" model="ir.ui.view">
        <field name="name">hospital.appointment.wizard.form</field>
        <field name="model">hospital.appointment.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Appointment">
                <group>

                    <group string="Patient Data">
                        <field name="patient_id"/>
                        <field name="reason"/>
                    </group>

                    <group string="Doctor Data">
                        <field name="doctor_id"/>
                        <field name="date_appointment"/>
                        <field name="status"/>
                    </group>

                </group>

                <footer>
                    <button name="action_create_appointment"
                            string="Create Appointment"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hospital_appointment_wizard" model="ir.actions.act_window">
        <field name="name">Create Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hospital_appointment_wizard_form"/>
        <field name="target">new</field>
    </record>

</odoo>