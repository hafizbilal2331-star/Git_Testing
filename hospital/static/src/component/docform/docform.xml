
<templates xml:space="preserve">
    <t t-name="hospital.docform">
        <div class="form-container">
            <h2>
                <t t-if="state.id">‚úè Edit Doctor</t>
                <t t-else="">Create Doctor</t>
            </h2>

            <form t-on-submit.prevent="saveRecord">
                <div class="mb-3">
                    <label>Name:</label>
                    <input type="text" t-model="state.name"/>
                </div>
                <div class="mb-3">
                    <label>Gender:</label>
                    <select t-model="state.gender">
                        <option value="">--Select--</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label>DOB:</label>
                    <input type="date" t-model="state.dob"/>
                </div>
                <div class="mb-3">
                    <label>Address:</label>
                    <textarea t-model="state.address"/>
                </div>

                <!-- üëá show patients if editing -->
                <t t-if="state.id">
                    <div class="mb-3">
                        <label>Patients:</label>
                        <t t-if="state.patients.length">
                            <ul>
                                <t t-foreach="state.patients" t-as="pat" t-key="pat.id">
                                    <li><t t-esc="pat.name"/></li>
                                </t>
                            </ul>
                        </t>
                        <t t-else="">
                            <p>No patients assigned</p>
                        </t>
                    </div>
                </t>

                <div class="footer">
                   <button type="submit">üíæ Save</button>
                   <button type="reset">üÜë Clear</button>
                </div>
            </form>
        </div>
    </t>
</templates>
