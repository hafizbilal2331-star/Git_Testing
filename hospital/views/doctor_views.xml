<odoo>

    <!-- this ACTION is for smart button -->
    <record id="action_open_appointments" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="domain">[('doctor_id','=',active_id)]</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctors">

                <sheet>
                    <!--                    this is for the smart button-->
                    <div class="oe_button_box" name="button_box">
                        <button name="%(hospital.action_open_appointments)d" type="action" class="oe_stat_button"
                                icon="fa-calendar">

                            <div class="o_stat_info">
                                <field name="appointment_count" class="o_stat_value"/>
                                <span class="o_stat_text">Appointments</span>

                            </div>
                        </button>
                    </div>
                    <group string="DOCTOR INFO.">
                    <!-- this is for left side fields occur -->
                    <group>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="dob"/>
                        <field name="gender"/>
                        <field name="address"/>
                    </group>
                    </group>
                    <notebook>
                         <page  string=" PATIENT DETAILS">
                        <group>
                            <field name="patient_ids"/>
                        </group>
                         </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LIST VIEW -->
    <record id="view_hospital_doctor_list" model="ir.ui.view">
        <field name="name">hospital.doctor.list</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <list string="DOCTORS">

                <field name="name"/>
                <field name="dob"/>
                <field name="gender"/>
                <field name="address"/>
                <field name="patient_ids"/>

            </list>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENU -->

    <menuitem id="menu_hospital_doctor" name="Doctors" parent="menu_hospital_root" action="action_hospital_doctor"
              sequence="30"/>


    <record id="doc_list_view_action" model="ir.actions.client">
        <field name="name">Doctor List View</field>
        <field name="tag">hospital.action_doc_list_view</field>
    </record>

    <menuitem id="menu_hospital_doc_list_view_item" name="Doctor OWL" parent="menu_hospital_root" action="doc_list_view_action"
              sequence="35"/>
</odoo>
