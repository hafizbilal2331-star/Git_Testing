<odoo>
    <!-- FORM VIEW -->
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" invisible="state!= 'draft'" class="oe_highlight"/>
                    <button name="action_ongoing" type="object" string="Ongoing" invisible="state!= 'confirmed'" class="oe_highlight"/>
                    <button name="action_done" type="object" string="Done" invisible="state!= 'ongoing'" class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Cancel" invisible="state == 'done'"/>
<!--                    <field name="state" widget="statusbar" options="{'clickable' : '1'}"/>-->
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,ongoing,done"/>
                </header>
                <sheet>
                    <group string="APPOINTMENT DETAILS">
                        <!--                        this is for left side fields occur -->
                        <group>
                            <field name="doctor_id"/>
                            <field name="patient_id"/>
                            <field name="date_appointment"/>
                            <field name="state"/>
                        </group>
                        <!--                        this is for right side fields occur -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- LIST VIEW -->
    <record id="view_hospital_appointment_list" model="ir.ui.view">
        <field name="name">hospital.appointment.list</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <list string="Appointment">
                <field name="doctor_id"/>
                <field name="patient_id"/>
                <field name="date_appointment"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENU -->
    <!--    <menuitem id="menu_hospital_root" name="Hospital Management"/>-->

    <record id="app_list_view_action" model="ir.actions.client">
        <field name="name">Doctor List View</field>
        <field name="tag">hospital.action_appointment_list_view</field>
    </record>

    <menuitem id="menu_hospital_app_list_view_item" name="Appointment OWL" parent="menu_hospital_root" action="app_list_view_action"
              sequence="45"/>

<!--    <menuitem id="menu_hospital_appointment" name="Appointment" parent="menu_hospital_root"-->
<!--              action="action_hospital_appointment"-->
<!--              sequence="40"/>-->
</odoo>
